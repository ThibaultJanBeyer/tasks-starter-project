{
  "name": "tasks-starter-server",
  "version": "0.1.0",
  "description": "Awesome scrum planning poker game done right ",
  "main": "dist/app.js",
  "author": "Thibault Jan Beyer",
  "license": "None",
  "scripts": {
    "build": "tsc",
    "test": "yarn test:lint && yarn test:unit && yarn test:integration && yarn teardown:dev; exit $TEST_EXIT_CODE",
    "test:lint": "eslint --ext .tsx,ts src/",
    "test:unit": "NODE_ENV=test jest --config jest.unit.js --passWithNoTests --coverage --runInBand",
    "pretest:integration": "yarn teardown:dev && yarn setup:dev",
    "test:integration": "NODE_ENV=test jest --config jest.integration.js --passWithNoTests --runInBand --forceExit; yarn teardown:dev",
    "posttest:integration": "yarn teardown:dev",
    "start": "\"@Todo production ready startup in docker container\"",
    "setup:dev": "./bin/setup-dev.sh",
    "teardown:dev": "./bin/teardown-dev.sh",
    "prestart:dev": "yarn setup:dev",
    "start:dev": "concurrently \"tsc -w\" \"nodemon -r source-map-support/register dist/app.js\""
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "config": "^3.3.7",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "joi": "^17.6.0",
    "mongoose": "^6.3.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.2",
    "typescript": "^4.6.3"
  },
  "devDependencies": {
    "@types/config": "^0.0.41",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^17.0.24",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "concurrently": "^7.1.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "jest-junit": "^13.1.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4"
  }
}
